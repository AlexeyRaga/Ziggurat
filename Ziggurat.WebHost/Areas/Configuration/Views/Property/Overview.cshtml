@model Ziggurat.Web.Areas.Configuration.Models.PropertyInfoModel
@using Ziggurat.Web.Helpers
@{
    ViewBag.Title = "Overview";
}

<ul class="nav nav-tabs">
    <li class="active"><a href="#home" data-toggle="tab">Property: <strong>@Model.Property.Name</strong></a></li>
    <li><a href="#specifics" data-toggle="tab">Specifics</a></li>
    <li><a href="#display" data-toggle="tab">Layout</a></li>
    <li><a href="#settings" data-toggle="tab">Settings</a></li>
</ul>

<div class="tab-content">
    <div class="tab-pane active" id="home">
        <fieldset>
            <ol class="unstyled">
                <li>Name: @Html.TextBoxFor(m=>m.Property.Name)</li>
                <li>Unique name: <strong>@Model.Property.Type</strong> (cannot be changed)
                </li>
            </ol>
        </fieldset>
    </div>
    <div class="tab-pane" id="specifics">
        @Html.Partial(Model.Property.Type.ToString() + "-Specifics", Model)
    </div>
    <div class="tab-pane" id="display">
        Some display options
    </div>
    <div class="tab-pane" id="settings">
        <fieldset>
            <ol class="unstyled">
                <li>
                    Default value: @Html.Action("ShowValue", "PropertyDefaultValue", new { area = "Forms", formId = Model.Form.Id, propertyId = Model.Property.PropertyId })
                </li>
            </ol>
        </fieldset>
    </div>
</div>
