<script src="/Areas/Configuration/Scripts/configuration.concatenation.formula.js"></script>

<section id="concatenationFormula">
    <table>
	    <tbody data-bind="foreach: parts">
		    <tr>
                <td><button type="button" class="btn"><i class="icon icon-remove"></i></button></td>
			    <td><span data-bind="text: $data"></span></td>
		    </tr>
	    </tbody>
	    <tfoot>
		    <tr>
			    <td colspan="2">
				    <div class="input-append">
				    <input type="text" placeholder="Constant" data-bind="value: newConstantPart"/>
				    <select data-bind="value: newPropertyPart"></select>
				    <button id="addFormulaPart" class="btn" type="button" data-bind="click: addNewPart">Add</button>
                        </div>
			    </td>
		    </tr>
	    </tfoot>
    </table>
</section>