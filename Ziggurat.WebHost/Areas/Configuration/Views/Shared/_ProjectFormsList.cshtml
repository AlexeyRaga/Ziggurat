@model Ziggurat.Web.Areas.Configuration.Models.ProjectFormsListModel
@using Ziggurat.Web.Helpers

<ul id="formsList" class="nav nav-list" style="padding: 8px 0;">
    @foreach (var group in Model.FormGroups)
    {
        <li class="nav-header">@group.Header</li>
        foreach (var form in group.Forms)
        {
            <li data-id="@form.FormId"><a href="@Url.Action("Overview", "Form", new{id = form.FormId})">@form.Name</a></li>
        }
    }
</ul>
<ul class="nav nav-list">
    <li class="divider"></li>
    <li>
        <div class="input-append">
            <input id="newHeaderText" type="text" placeholder="new blockheader..." class="span9" />
            <button id="addBlockHeader" class="btn" type="button">Add</button>
        </div>
    </li>
</ul>
