@using Ziggurat.Web.Helpers

@if (Request.IsAuthenticated) {
    <text>
        <span class="navbar-text">
        Logged in as @Html.ActionLink(User.Identity.Name, "Manage", "User", routeValues: new { area = "Account" }, htmlAttributes: new { @class = "navbar-link", title = "Manage" })
        </span>
        @using (Html.BeginForm("LogOff", "User", new { area = "Account" }, FormMethod.Post, new { id = "logoutForm", style="display: inline" })) {
            @Html.AntiForgeryToken()
            <a href="javascript:document.getElementById('logoutForm').submit()" class="navbar-link">(log off)</a>
        }
    </text>
} else {
    <ul class="nav">
        @Html.MenuItemForPath("Account/User/Register", "Register", "registerLink")
        @Html.MenuItemForPath("Account/User/Login", "Log in", "loginLink")
    </ul>
}
